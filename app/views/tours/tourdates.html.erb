tourdates.erb

<h2>"Let's get some gigs, <%= @user.first_name.capitalize %>!"</h2>
<table width=100%>
  <td width="50%">

    <div class="new_tourdates">
    <form method="POST" action="/tourdates">
      <% @venues.each do |venue| %>
      
        <input type="checkbox" name="user[venue_ids][]" id="<%= venue.id %>" value="<%= venue.id %>" <%='checked' if @user.venues.include?(venue) %> />    
        <label for="<%= venue.id %>" value="<%= venue.id %>"><a href="/venues/<%= venue.id %>"><%= venue.name %></a></label>
        <h5>      <%=venue.city%>, <%= venue.state%></h5>
      <% end %>
      <input type="submit" id="new_tourdates" value="Add Tourdate" />
    </form>
    </div>
  </td>

  <td>
    <div class="existing_tourdates">
      <% @tourdates.each do |tourdate| %>
        <p>
          <a href="/tourdates/<%= tourdate.id %>"><%= tourdate.venue_name %></a>
          <h5>      <%=tourdate.venue.city%>, <%= tourdate.venue.state%></h5>
        </p>
      <% end %>

  </div>
</td>

</table>

