tourdates.erb

<h2>"Let's get some gigs, <%= @user.first_name.capitalize %>!"</h2>
<div class="selected_venues">
<form action="/tourdates" method="POST">

  <% @tourdates.each do |tourdate| %>
    <% if @user.tourdates.include?(tourdate) %>
      <input type="checkbox" name="user[tourdate_ids][]" id="<%= tourdate.id %>" value="<%= tourdate.id %>" <%='checked' if @user.tourdates.include?(tourdate) %>> 
      <label for="<%= tourdate.id %>"><a href="<%= tourdate %>"><%= tourdate.name %></a></label>
      <h5>      <%=tourdate.city%>, <%= tourdate.state%></h5>
    <% end %>
  <% end %>

</form>  
</div>

<div >
<form method="POST" action="/tourdates/new">
  <% @venues.each do |venue| %>
    <input type="checkbox" name="user[venue_ids][]" id="<%= venue.id %>" value="<%= venue.id %>">    
    <label for="<%= venue.id %>"><a href="<%= venue %>"><%= venue.name %></a></label>
    <h5>      <%=venue.city%>, <%= venue.state%></h5>
  <% end %>
</form>
</div>

